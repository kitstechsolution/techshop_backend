{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for electronics and robotics e-commerce website",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "set NODE_ENV=development&& tsx watch src/server.ts",
    "dev:hot": "set NODE_ENV=development&& tsx watch --clear-screen=false src/server.ts",
    "dev:win": "set NODE_ENV=development&& tsx watch src/server.ts",
    "dev:unix": "NODE_ENV=development tsx watch src/server.ts",
    "watch": "tsc --watch",
    "build": "tsc",
    "test": "node scripts/test-runner.cjs",
    "test:direct": "jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "seed": "tsx src/utils/seed.ts",
    "migrate:create": "migrate-mongo create",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:status": "migrate-mongo status"
  },
  "keywords": [
    "ecommerce",
    "electronics",
    "robotics",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pdfkit": "^0.17.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "razorpay": "^2.9.6",
    "sharp": "^0.33.5",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.21.0",
    "jest": "^30.2.0",
    "migrate-mongo": "^12.1.3",
    "mongodb-memory-server": "^10.2.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.24.1"
  }
}
